{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./src",
    "lib": [ "es6", "dom", "esnext" ],
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "pretty": true,
    "alwaysStrict": true,
    "declaration": true
  },
  "include": [ "src/**/*.ts" ],
  "exclude": [ "src/**/*.spec.ts", "node_modules" ]
}
